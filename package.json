{
  "name": "@releaseband/commitlint-config",
  "version": "0.0.0-semantic-release",
  "description": "commitlint shareable config",
  "author": "releaseband",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write --ignore-path ./.gitignore . && prettier . --write --ignore-unknown --ignore-path ./.gitignore",
    "commit": "cz",
    "lint": "eslint . --ext .js --fix --ignore-path ./.gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/cz-commitlint": "^16.1.0",
    "@releaseband/commitlint-config": "^0.2.0",
    "@releaseband/eslint-config": "^0.2.0",
    "@releaseband/lint-staged-config": "^0.2.1",
    "@releaseband/prettier-config": "^0.2.0",
    "@releaseband/semantic-release-npm-github-config": "^1.0.0",
    "commitizen": "^4.2.4",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.30.0",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2"
  },
  "peerDependencies": {
    "@commitlint/cli": "^16.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/releaseband/commitlint-config.git"
  },
  "bugs": {
    "url": "https://github.com/releaseband/commitlint-config/issues"
  },
  "homepage": "https://github.com/releaseband/commitlint-config#readme"
}
